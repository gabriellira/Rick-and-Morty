<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RickAndMorty" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
    </style>

    <style name="Widget.App.Button.Borderless" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.Borderless</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/button_color</item>
        <item name="colorOnPrimary">@color/button_color_on_primary</item>
    </style>

    <style name="ThemeOverlay.App.Button.Borderless" parent="">
        <item name="colorPrimary">@color/button_color</item>
        <item name="colorOnPrimary">@color/button_color_on_primary</item>
    </style>
</resources>
